<!-- Cena de um parapente a movimentar-se para primeira entrega de LAIG (Nuno Silva e Paulo Babo) -->



<dsx>

    <scene root="root" axis_length="10" />


    <views default="view1" >
        <perspective id="perspective1" near="0.1" far="1000" angle="45">
            <from x="0" y="31" z="0.01" />
            <to x="0" y="0" z="0" />
        </perspective>

    </views>


    <illumination doublesided="1" local="1" >
		<ambient r="0.4" g="0.4" b="0.4" a="0.8" />
        <background r="0.1" g="0.1" b="0.1" a="0.95" />
    </illumination>


    <lights>
        <omni id="luz1" enabled="1" >
            <location x="0" y="40" z="0" w="0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1" />
            <diffuse r="0.9" g="0.9" b="0.9" a="0.9" />
            <specular r="0.9" g="0.9" b="0.9" a="0.9" />
        </omni>

		
		
		 

    </lights>


    <textures>
		<texture id="tabuleiroTex" file="textures\\boardv1.png" length_s="1" length_t="1" />
		<texture id="azulTex" file="textures\\azul.png" length_s="1" length_t="1" />
	</textures>


    <materials>

		<material id="materialTabuleiro" >
          <emission r="1" g="1" b="1" a="1" />
          <ambient r="0" g="0" b="0" a="1" />
          <diffuse r="0" g="0" b="0" a="0" />
          <specular r="1" g="1" b="1" a="1" />
          <shininess value="0.01" />
        </material>
		
		
		<material id="materialPecaAzul" >
          <emission r="0.1" g="0.4" b="1" a="1" />
          <ambient r="0" g="0" b="0" a="1" />
          <diffuse r="0" g="0" b="0" a="1" />
          <specular r="0" g="0" b="0" a="1" />
          <shininess value="1" />
        </material>
	

    </materials>


    <transformations>

    </transformations>


	<animations>
   
	</animations>




    <primitives>
        <primitive id="rectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
		</primitive>

        <primitive id="triangle">
			<triangle x1="2" y1="2" z1="0" x2="1" y2="1" z2="0" x3="2" y3="0" z3="0" />
		</primitive>

        <primitive id="cylinder">
			<cylinder base="0.5" top="0.5" height="1" slices="20" stacks="20" />
		</primitive>

        <primitive id="sphere">
			<sphere radius="0.5" slices="20" stacks="20" />
		</primitive>

        <primitive id="torus">
			<torus inner="0.1" outer="1" slices="20" loops="10" />
		</primitive>

		<primitive id="cone">
            <cylinder base="0" top="0.5" height="1" slices="50" stacks="10" />
        </primitive>

        <primitive id="tabuleiro">
            <plane dimX="50" dimY="50" partsX="200" partsY="200"/>
        </primitive>



    </primitives>



    <components>

        <component id="root">

            <transformation>
                 <translate x="0" y="0" z="0" />
            </transformation>
			
           
            <materials>
                <material id="materialParede" />
            </materials>

            <texture id="none" />

        
            <children>
				<componentref id="tabuleiro"/>
				<componentref id="pecaGrande"/>
				<componentref id="pecaGrande1"/>
            </children>

        </component>
		

		
		
		<component id="tabuleiro">
            <transformation>
				<rotate axis="x" angle="-90" />
				<scale x="0.5" y="0.5" z="0.5" />
            </transformation>


            <materials>
                <material id="materialTabuleiro" />
            </materials>

            <texture id="tabuleiroTex" />

            <children>
                <primitiveref id="tabuleiro" />
            </children>

        </component>
		
		
		<component id="pecaGrande">
            <transformation>
				<translate x="0" y="0.5" z="2" />
				<rotate axis="x" angle="-90" />
            </transformation>


            <materials>
                <material id="materialPecaAzul" />
            </materials>

            <texture id="none" />

            <children>
                <primitiveref id="torus" />
            </children>

        </component>
		
		<component id="pecaGrande1">
            <transformation>
				<translate x="0" y="2" z="2" />
				<rotate axis="x" angle="-90" />
            </transformation>


            <materials>
                <material id="materialTabuleiro" />
            </materials>

            <texture id="none" />

            <children>
                <primitiveref id="torus" />
            </children>

        </component>
		
		
		
		
		

    </components>


	

</dsx>

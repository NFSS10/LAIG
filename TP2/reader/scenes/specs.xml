<!-- Cena de jogo baseada no jogo Rocket League para primeira entrega de LAIG (Nuno Silva e Paulo Babo) -->

<!-- Os comentarios devem ter espacos no inicio e no fim, a -->
<!-- separar dos hifens -->
<!-- Nao devem ser usados caracteres especiais (p.ex. acentos) -->
<!-- Todas as tags e atributos sao obrigatorios, exceto onde for -->
<!-- referido o contrario -->

<!-- Na descricao abaixo, os simbolos utilizados tem o seguinte significado: -->
    <!-- ii: integer value -->
    <!-- ff: float value -->
    <!-- ss: string value -->
    <!-- cc: character "x" or "y" or "z" -->
  <!-- tt: "0" or "1"  ith Boolean significance -->


<dsx>


    <!-- deve definir-se um objeto para raiz do grafo , assim -->
    <!-- como o comprimento dos tres eixos (cilindros) -->
    <scene root="root" axis_length="10" />


    <views default="view1" >
        <!-- declaracao obrigatoria de pelo menos uma vista; -->
        <!-- se varias vistas declaradas, o default e' a -->
        <!-- primeira vista; de cada vez que se pressione a tecla v/V, -->
        <!-- a vista muda para a proxima da lista; da -->
        <!-- ultima vista da lista volta 'a primeira -->
        <perspective id="perspective1" near="0.1" far="500" angle="25">
            <from x="12" y="5" z="20" />
            <to x="0" y="5" z="0" />
        </perspective>

		 <perspective id="perspective2" near="0.1" far="500" angle="25">
            <from x="7" y="4" z="9" />
            <to  x="4.5" y="4.5" z="4.75" />
        </perspective>

    </views>


    <illumination doublesided="1" local="1" >
		<ambient r="0.4" g="0.4" b="0.4" a="0.8" />
        <background r="0.1" g="0.1" b="0.1" a="0.95" />
    </illumination>


    <lights>

        <!-- Deve existir um ou mais blocos "omni" ou "spot" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <omni id="luzPrincipal" enabled="1" >
            <location x="7" y="15" z="7" w="-90" />
            <ambient r="0.2" g="0.2" b="0.2" a="0.9" />
            <diffuse r="0.9" g="0.9" b="0.9" a="0.9" />
            <specular r="0.9" g="0.9" b="0.9" a="0.9" />
        </omni>

		 <omni id="luz2" enabled="1" >
            <location x="10" y="10" z="5" w="0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </omni>

        <spot id="spot1" enabled="0" angle="35" exponent="1">
            <!-- atencao, "target" e' diferente de "direction" -->
            <target x="0" y="5" z="5" />
            <location x="15" y="10" z="5" />
            <ambient r="0.1" g="0.1" b="0.1" a="0.5" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </spot>

		<spot id="spot2" enabled="1" angle="35" exponent="1">
            <!-- atencao, "target" e' diferente de "direction" -->
            <target x="7" y="4.5" z="5" />
            <location x="5" y="5" z="19" />
            <ambient r="0.2" g="0.2" b="0.2" a="0.5" />
            <diffuse r="0.7 " g="0.7" b="0.7" a="1" />
            <specular r="0.6" g="0.6" b="0,6" a="1" />
        </spot>

    </lights>


    <textures>
		<texture id="BolaTex" file="textures\\bolatex.jpg" length_s="1" length_t="1." />
	</textures>


    <materials>

        <!-- Deve existir um ou mais blocos "material" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
		<material id="materialTeste" >
          <emission r="0" g="0" b="0" a="0" />
          <ambient r="0.1" g="0.3" b="0.1" a="0.9" />
          <diffuse r="0.1" g="0.9" b="0.1" a="0.7" />
          <specular r="1" g="0.1" b="0.1" a="0.7" />
          <shininess value="0.9" />
        </material>

		<material id="materialTeste2" >
          <emission r="0" g="0" b="0" a="0" />
          <ambient r="0.1" g="0.3" b="0.4" a="0.9" />
          <diffuse r="0.1" g="0.9" b="0.9" a="0.7" />
          <specular r="0.1" g="0.1" b="0.9" a="0.7" />
          <shininess value="0.9" />
        </material>

		<material id="materialTeste3" >
          <emission r="1" g="0" b="0" a="0" />
          <ambient r="0.9" g="0.3" b="0.1" a="0.9" />
          <diffuse r="0.9" g="0.1" b="0.1" a="0.7" />
          <specular r="1" g="0.1" b="0.1" a="0.7" />
          <shininess value="0.9" />
        </material>

		<material id="materialBola" >
          <emission r="0" g="0" b="0" a="0" />
          <ambient r="0.1" g="0.1" b="0.1" a="0.9" />
          <diffuse r="0.6" g="0.6" b="0.6" a="0.7" />
          <specular r="0.4" g="0.4" b="0.4" a="0.5" />
          <shininess value="0.9" />
        </material>

        <material id="materialCarropt2" >
          <emission r="0.1" g="0.1" b="0.1" a="0.1" />
          <ambient r="0.2" g="0.2" b="0.2" a="0.2" />
          <diffuse r="0.3" g="0.3" b="0.3" a="0.3" />
          <specular r="1.0" g="1.0" b="1.0" a="1" />
          <shininess value="0.9" />
        </material>

		<material id="materialParedeRocket" >
            <emission r="0.5" g="0.5" b="0.5" a="0.5" />
            <ambient r="0.9" g="0.9" b="0.9" a="1" />
            <diffuse r="0.9" g="0.9" b="0.9" a="1" />
            <specular r="0" g="0" b="0.0" a="0" />
            <shininess value="0.5" />
        </material>

		<material id="materialParede" >
            <emission r="0" g="0" b="0" a="0" />
            <ambient r="0.1" g="0.1" b="0.1" a="0.1" />
            <diffuse r="0.5" g="0.5" b="0.5" a="0.3" />
            <specular r="0.1" g="0.1" b="0.1" a="1" />
            <shininess value="0.1" />
        </material>

		<material id="materialChao" >
            <emission r="0" g="0" b="0" a="0" />
            <ambient r="0.1" g="0.1" b="0.1" a="0.1" />
            <diffuse r="0.5" g="0.5" b="0.5" a="0.3" />
            <specular r="0.5" g="0.5" b="0.5" a="1" />
            <shininess value="0.5" />
        </material>

		<material id="materialCesto" >
            <emission r="0.1" g="0.1" b="0.1" a="0.9" />
            <ambient r="0.2" g="0.2" b="0.2" a="0.6" />
            <diffuse r="0.2" g="0.2" b="0.2" a="1" />
            <specular r="1" g="1" b="1" a="1" />
            <shininess value="0.8" />
        </material>

		<material id="materialAro" >
            <emission r="0.3" g="0.2" b="0.2" a="0.2" />
            <ambient r="0.1" g="0.1" b="0.1" a="0.6" />
            <diffuse r="0.2" g="0.2" b="0.2" a="0.7" />
            <specular r="1" g="1" b="1" a="0.9" />
            <shininess value="0.8" />
        </material>

		<material id="materialBoost" >
            <emission r="0.9" g="0.9" b="0.9" a="0.9" />
            <ambient r="0.5" g="0.5" b="0.5" a="0.6" />
            <diffuse r="0.2" g="0.2" b="0.2" a="0.7" />
            <specular r="0" g="0" b="0" a="0.9" />
            <shininess value="0.8" />
        </material>

    </materials>


    <transformations>

        <!-- Deve existir um ou mais blocos "transformation" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <transformation id="transf1">
           <!-- instrucoes a usar sem limite nem ordem -->
           <!-- deve existir pelo menos uma transformacao -->
           <translate x="1" y="1" z="1" />
           <rotate axis="x" angle="25" />
           <scale x="1" y="1" z="1" />
        </transformation>

		 <transformation id="transf2">
           <!-- instrucoes a usar sem limite nem ordem -->
           <!-- deve existir pelo menos uma transformacao -->
           <translate x="0" y="2" z="2" />
        </transformation>

    </transformations>


		<!-- novo bloco de animacao -->
	<animations>
   <!-- podem existir zero ou mais nós "animation" -->
    <!-- span é o tempo, em segundos, que a animação deve -->
    <!-- demorar. Nesta versão do formato DSX, type pode ter -->
    <!-- o valor "linear" ou "circular"; na animacao circular -->
    <!-- os angulos sao expressos em graus  -->

    	<animation id="linera1" span="10" type="linear">
			<!-- pode ter mais que 1 control point  -->
        	<controlpoint xx="0" yy="0" zz="0" />
        	<controlpoint xx="0" yy="0" zz="20" />
        </animation>


		<animation id="sobeDesce" span="10" type="linear">
        	<controlpoint xx="0" yy="0" zz="0" />
        	<controlpoint xx="0" yy="0" zz="5" />
			<controlpoint xx="0" yy="5" zz="10" />
			<controlpoint xx="5" yy="0" zz="15" />
        </animation>

		<animation id="testean" span="10" type="linear">
			<!-- pode ter mais que 1 control point  -->
        	<controlpoint xx="0" yy="0" zz="0" />
        	<controlpoint xx="0" yy="0" zz="1" />
<controlpoint xx="0" yy="0" zz="0" />
<controlpoint xx="0" yy="0" zz="1" />
<controlpoint xx="0" yy="0" zz="0" />
<controlpoint xx="0" yy="0" zz="1" />
<controlpoint xx="0" yy="0" zz="0" />
<controlpoint xx="0" yy="0" zz="1" />
<controlpoint xx="0" yy="0" zz="0" />
<controlpoint xx="0" yy="0" zz="1" />
<controlpoint xx="0" yy="0" zz="0" />
        </animation>


        <animation id="linera2" span="2" type="linear">
			<!-- pode ter mais que 1 control point  -->
        	<controlpoint xx="0" yy="0" zz="0" />
        	<controlpoint xx="0" yy="0" zz="10" />
        </animation>
		<animation id="linera3" span="20" type="linear">
			<!-- pode ter mais que 1 control point  -->
        	<controlpoint xx="0" yy="0" zz="0" />
        	<controlpoint xx="0" yy="0" zz="-5" />
        </animation>
   
		<animation id="circular1" span="5" type="circular" centerx="0" centery="0" centerz="0" radius="0" startang="-45" rotang="360" />

		<animation id="heliceAnim" span="20" type="circularz" centerx="0" centery="0.5" centerz="0" radius="0" startang="0" rotang="36000" />



	</animations>




    <primitives>
        <primitive id="rectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
		</primitive>

        <primitive id="triangle">
			<triangle x1="2" y1="2" z1="0" x2="1" y2="1" z2="0" x3="2" y3="0" z3="0" />
		</primitive>

        <primitive id="cylinder">
			<cylinder base="0.5" top="0.5" height="1" slices="20" stacks="20" />
		</primitive>

        <primitive id="sphere">
			<sphere radius="0.5" slices="20" stacks="20" />
		</primitive>

        <primitive id="torus">
			<torus inner="0.1" outer="1" slices="20" loops="10" />
		</primitive>

		<primitive id="cone">
            <cylinder base="0" top="0.5" height="1" slices="50" stacks="10" />
        </primitive>

        <primitive id="plane1">
            <plane dimX="2" dimY="3" partsX="4" partsY="5"/>
        </primitive>

		<primitive id="patch1">
            <patch orderU="1" orderV="2" partsU="20" partsV="20" >
            	<controlpoint x="0" y="0" z="0" />
            	<controlpoint x="0" y="1" z="0" />
            	<controlpoint x="0" y="2" z="0" />
            	<controlpoint x="2" y="0" z="0" />
            	<controlpoint x="2" y="1" z="3" />
            	<controlpoint x="2" y="2" z="0" />
            </patch>
         </primitive>
		 
         <primitive id="vehicle1">
          	<vehicle />
         </primitive>
		 
         <primitive id= "chessboard1">
             <chessboard du="8" dv="8" textureref="BoardTex" su="2" sv="2">
             	<c1 r="1.0" g="0.0" b="0.0" a="1.0" />
             	<c2 r="0.0" g="0.0" b="1.0" a="1.0" />
             	<cs r="0.0" g="1.0" b="0.0" a="1.0" />
           	 </chessboard>
         </primitive>


    </primitives>



    <components>

        <component id="root">

            <transformation>
                 <translate x="0" y="0" z="0" />
            </transformation>
			
			<animation>
       	    </animation>

           
            <materials>
                <material id="materialParede" />
            </materials>

            <texture id="none" />

        
            <children>
				<componentref id="parapente"/>
            </children>

        </component>


		
		<component id="parapente">
            <transformation>
				<rotate axis="y" angle="-90" />
            </transformation>

			<animation>
			<animationref id="circular1" />
       	    </animation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" />

            <children>
                <componentref id="paraquedas"/>
				<componentref id="ventoinha"/>
            </children>

        </component>





		<component id="paraquedas">
            <transformation>
            </transformation>

			<animation>
       	    </animation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" />

            <children>
                <primitiveref id="vehicle1" />
            </children>

        </component>

		
		
		
		
		<component id="ventoinha">
            <transformation>
				<translate x="-0.47" y="0" z="-0.7" />
            </transformation>

			<animation>
       	    </animation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="BolaTex" />

            <children>
				<componentref id="helice1"/>
				<componentref id="helice2"/>
				<componentref id="helice3"/>
				<componentref id="helice4"/>
            </children>
        </component>

		
		
		<component id="helice1">
            <transformation>
				<translate x="0" y="0" z="0.7" />
				<rotate axis="z" angle="90" />
				<scale x="0.2" y="0.05" z="1" />
            </transformation>

			<animation>
				<animationref id="heliceAnim" />
       	    </animation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
			  <primitiveref id="cylinder" />
            </children>
        </component>

		<component id="helice2">
            <transformation>
				<translate x="0" y="0" z="-0.3" />
				<rotate axis="z" angle="90" />
				<scale x="0.2" y="0.05" z="1" />
            </transformation>

			<animation>
			      <animationref id="heliceAnim" />
       	    </animation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
			  <primitiveref id="cylinder" />
            </children>
        </component>
		
		<component id="helice3">
            <transformation>
				<translate x="0" y="0" z="0.7" />
				<rotate axis="z" angle="90" />
				<rotate axis="y" angle="90" />
				<scale x="0.2" y="0.05" z="1" />
            </transformation>

			<animation>
				<animationref id="heliceAnim" />
       	    </animation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
			  <primitiveref id="cylinder" />
            </children>
        </component>

		<component id="helice4">
            <transformation>
				<translate x="0" y="-0.9" z="0.7" />
				<rotate axis="z" angle="90" />
				<rotate axis="y" angle="90" />
				<scale x="0.2" y="0.05" z="1" />
            </transformation>

			<animation>
			      <animationref id="heliceAnim" />
       	    </animation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
			  <primitiveref id="cylinder" />
            </children>
        </component>


		
		
		

    </components>


	

</dsx>
